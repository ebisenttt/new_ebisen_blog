{
  "compilerOptions": {
    "target": "ES6",
    "module": "esnext",
    "jsx": "preserve",
    "strict": true,
    "noImplicitReturns": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "noEmit": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@shared/*": ["src/shared/*"],
      "@entities/*": ["src/entities/*"],
      "@features/*": ["src/features/*"],
      "@widgets/*": ["src/widgets/*"],
      "@processes/*": ["src/processes/*"],
      "@pages/*": ["src/pages/*"],
      "@app-providers/*": ["src/app-providers/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "exclude": ["node_modules"],
  "include": [
    "_drafts/**/*",
    "new-types.d.ts",
    "next-env.d.ts",
    "postcss.config.js",
    "src/**/*.css",
    "src/**/*.ts",
    "src/**/*.tsx",
    "tailwind.config.js",
    ".next/types/**/*.ts"
  ]
}
